<Window x:Class="Terminal.Windows.UpdateNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terminal.Windows"
        mc:Ignorable="d"
        Title="UpdateName" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Border Style="{DynamicResource BorderStyle}">
        <StackPanel Style="{DynamicResource StackPanelStyle}" Orientation="Vertical" Height="180">
            <TextBox x:Name="txtUpdFname" Style="{DynamicResource TextBoxStyle}" Text="input firstname"
                     Margin="10"/>
            <TextBox x:Name="txtUpdLname" Style="{DynamicResource TextBoxStyle}" Text="input lastname"
                     Margin="10"/>
            <Button x:Name="btnUpdContacts" Style="{DynamicResource ButtonStyle}" Content="OK" Height="50"
                    Click="BtnUpdContacts_Click"/>
        </StackPanel>
    </Border>
</Window>
